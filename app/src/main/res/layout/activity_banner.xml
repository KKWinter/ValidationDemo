<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="30dp">

    <include
        android:id="@+id/banner_title_bar"
        layout="@layout/activity_titlebar" />

    <TextView
        android:id="@+id/banner_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/banner_title_bar"
        android:padding="10dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="13dp" />


    <TextView
        android:id="@+id/load_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/activity_btn"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="SHOW"
        android:textColor="@android:color/white"
        android:textSize="12dp" />

    <RelativeLayout
        android:id="@+id/show_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/load_btn"
        android:layout_below="@id/banner_desc">


        <TextView
            android:id="@+id/show_area_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#dddddd"
            android:gravity="center"
            android:text="DISPLAY AREA"
            android:textColor="#888888"
            android:layout_centerInParent="true"
            android:textSize="25dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/show_area_text"
            android:background="#666666" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/show_area_text"
            android:background="#666666" />

    </RelativeLayout>


</RelativeLayout>